{
  "name": "dna-challenge",
  "version": "1.0.0",
  "description": "DNA technical test(simple NodeJS backend)",
  "repository": {
    "type": "git",
    "url": "https://github.com/Nerond32/dna-challenge.git"
  },
  "main": "src/index.js",
  "scripts": {
    "lint": "eslint .",
    "start": "nodemon --exec \"npm run lint && node src/index.js\"",
    "test": "jest --watch",
    "lint-test": "npm run lint && jest"
  },
  "author": "",
  "license": "ISC",
  "nodemonConfig": {
    "restartable": "rs",
    "ignore": [
      "node_modules/**/node_modules"
    ],
    "delay": "750",
    "env": {
      "NODE_ENV": "development",
      "PORT": 3000
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint-test",
      "pre-push": "npm run lint-test"
    }
  },
  "devDependencies": {
    "eslint": "^6.0.1",
    "eslint-config-airbnb-base": "^13.2.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^3.0.0",
    "jest": "^24.8.0",
    "nodemon": "^1.19.1",
    "prettier": "^1.18.2"
  },
  "dependencies": {
    "@hapi/joi": "^15.1.0",
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "express-validation": "^1.0.2",
    "joi": "^14.3.1",
    "mongodb-memory-server": "^5.1.5",
    "mongoose": "^5.6.4"
  }
}
